{
  "mariner": {
    "jobs": {
      "engine": {
        "labels": {
          "app": "mariner-engine"
        },
        "serviceaccount": "mariner-service-account",
        "restart_policy": "never"
      },
      "task": {
        "labels": {
          "app": "mariner-task"
        },
        "restart_policy": "never"
      }
    },
    "containers": {
      "engine": {
        "name": "mariner-engine",
        "image": "quay.io/cdis/mariner-engine:feat_k8s",
        "pull_policy": "always",
        "command": ["/bin/sh"],
        "volume_mounts": [
          {
            "name": "shared-data",
            "mountpath": "/data",
            "mountpropagation": "HostToContainer"
          }
        ]
      },
      "s3sidecar": {
        "name": "mariner-s3sidecar",
        "image": "quay.io/cdis/mariner-s3sidecar:feat_k8s",
        "pull_policy": "always",
        "command": ["/bin/sh", "./s3sidecarDockerrun.sh"],
        "securitycontext": {
          "privileged": "true"
        },
        "volume_mounts": [
          {
            "name": "shared-data",
            "mountpath": "/data",
            "mountpropagation": "Bidirectional"
          }
        ]
      },
      "commandlinetool": {
        "volume_mounts": [
          {
            "name": "shared-data",
            "mountpath": "/data",
            "mountpropagation": "HostToContainer"
          }
        ]
      }
    }
  }
}
