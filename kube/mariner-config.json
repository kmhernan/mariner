{
  "mariner": {
    "secrets": {
      "awsusercreds": {
        "name": "workflow-bot-g3auto",
        "key": "awsusercreds.json"
      }
    },
    "jobs": {
      "engine": {
        "labels": {
          "app": "mariner-engine"
        },
        "serviceaccount": "mariner-service-account",
        "restart_policy": "never"
      },
      "task": {
        "labels": {
          "app": "mariner-task"
        },
        "restart_policy": "never"
      }
    },
    "containers": {
      "engine": {
        "name": "mariner-engine",
        "image": "quay.io/cdis/mariner-engine:feat_k8s",
        "pull_policy": "always",
        "command": ["/bin/sh"],
        "volume_mounts": [
          {
            "name": "shared-data",
            "mountpath": "/data",
            "mountpropagation": "HostToContainer"
          },
          {
            "name": "mariner-config",
            "mountpath": "/mariner.json",
            "read_only": true
          }
        ]
      },
      "s3sidecar": {
        "name": "mariner-s3sidecar",
        "image": "quay.io/cdis/mariner-s3sidecar:feat_k8s",
        "pull_policy": "always",
        "command": ["/bin/sh", "./s3sidecarDockerrun.sh"],
        "securitycontext": {
          "privileged": true
        },
        "volume_mounts": [
          {
            "name": "shared-data",
            "mountpath": "/data",
            "mountpropagation": "Bidirectional"
          }
        ]
      },
      "task": {
        "name": "mariner-task",
        "image": "alpine",
        "pull_policy": "always",
        "command": ["/bin/sh"],
        "volume_mounts": [
          {
            "name": "shared-data",
            "mountpath": "/data",
            "mountpropagation": "HostToContainer"
          }
        ]
      }
    }
  }
}
